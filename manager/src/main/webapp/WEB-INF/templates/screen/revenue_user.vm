#if($!hasUser)
	<link href="$cdn.name("css/datatables/dataTables.bootstrap.css")" rel="stylesheet" type="text/css" />
	<form role="form" action="revenue.htm" method="post">
		<input type="hidden" name="uid" id="uid" value="$!{user.id}"/>
		<div class="row">
			<div class="col-xs-12">
				<div class="box box-danger">
				
		            <div class="box-body table-responsive">
		                <table id="userinfo" class="table table-bordered table-hover">
		                    <thead>
		                        <tr>
		                            <th>账户ID</th>
		                            <th>账户名</th>
		                            <th>全名</th>
		                            <th>手机号</th>
		                            <th>邮箱</th>
		                            <th>账户余额</th>
		                            <th>状态</th>
		                        </tr>
		                    </thead>
		                    <tbody>
		                       <tr >
		                    		<td >$!{user.id}</td>
		                    		<td >$!{user.name}</td>
		                    		<td >$!{user.fullname}</td>
		                    		<td >$!{user.mobile}</td>
		                    		<td >$!{user.email}</td>
		                    		<td >$!{user.accountBalance}</td>
		                    		<td >
		                    			#if($!{user.status} == "active")
		                    				已激活
		                    			#elseif($!{user.status} == "locked")
		                    				已锁定
		                    			#elseif($!{user.status} == "banned")
		                    				已禁止
		                    			#elseif($!{user.status} == "deleted")
		                    				已删除
		                    			#end
		                            </td>
		                        </tr>
		                        
		                        <tr>
		                        	<td colspan="7">
		                        		转账金额(可用金额 $!{user.accountBalance}) : <input name="income" type="text" class="form-control" id="income" placeholder="可用金额 $!{user.accountBalance}"/>
		                        	</td>
		                        </tr>
		                    </tbody>
		                </table>
		            </div>
		            <div class="box-footer">
			            <div class="form-group">
		                    <button type="submit" class="btn btn-primary">确认转账</button>
		                </div>
	                </div>
		        </div>
			</div>
		</div>
	</form>
	<script src="$cdn.name("js/plugins/datatables/jquery.dataTables.js")" type="text/javascript"></script>
	<script src="$cdn.name("js/plugins/datatables/dataTables.bootstrap.js")" type="text/javascript"></script>
	<script type="text/javascript">
	    $(function() {
	        $("#userinfo").dataTable({
	            "bPaginate": false,//分页
	            "bLengthChange": false,
	            "bFilter": false,
	            "bSort": true,
	            "bInfo": true,
	            "bAutoWidth": false,
				"oLanguage": {
					"sInfo": "",
					"sInfoEmpty": ""
			 	}
	        });
	    });
	</script>
#else
	<div class="row">
	    <div class="col-xs-12">
			<div class="box box-danger">
	            <div class="box-body">
		            <div class="form-group">
	                    <label>用户账户信息查询失败！</label>
	                </div>
	            </div>
	        </div>
		</div>
	</div>
#end