<form role="form" action="article_create.htm" method="post" >

	<div class="row">
	
		<div class="col-xs-12">
			<div class="box box-danger">
	            <div class="box-header">
	                <h3 class="box-title">编写文章<small>注意填写规范</small></h3>
	            </div>
	        </div>
		</div>
	
	    <div class="col-xs-6">
			<div class="box box-danger">
	            <div class="box-body">
	            
	            	<div class="form-group">
	                    <label for="type">文章类型(type)</label>
						<div class="input-group">
	                        <div class="input-group-addon">
	                            <i class="fa fa-edit"></i>
	                        </div>
	                        <select class="form-control" name="type">
	    						<optgroup label="请选择文章类型">
	    							<option value="normal">常规类型</option>
	    							<option value="ad">广告类型</option>
	                            </optgroup>
	                        </select>
	                    </div>
	                </div>
		                                    
		        	<div class="form-group">
	                    <label for="catId">文章种类(cat)</label>
						<div class="input-group">
	                        <div class="input-group-addon">
	                            <i class="fa fa-edit"></i>
	                        </div>
	                        <select class="form-control" name="catId">
	    						<optgroup label="请选择文章种类">
	    							#if($!hasCat)
	    								#foreach($cat in $!catList)
	    									<option value="$!{cat.id}">$!{cat.name}</option>
	    								#end
	    							#else
	    								<option value="0">还没有任何文章种类</option>
	    							#end
	                            </optgroup>
	                        </select>
	                    </div>
	                </div>
	                
	            </div>
	        </div>
		</div>
		
		<div class="col-xs-6">
			<div class="box box-danger">
	            <div class="box-body">
	            
		            <div class="form-group">
	                    <label for="status">状态(status)</label>
						<div class="input-group">
	                        <div class="input-group-addon">
	                            <i class="fa fa-edit"></i>
	                        </div>
	                        <select class="form-control" name="status">
	    						<optgroup label="请选择文章状态">
	    							<option value="inactive" selected="selected">inactive</option>
	    							<option value="active">active</option>
	    							<option value="banned">banned</option>
	    							<option value="deleted">deleted</option>
	                            </optgroup>
	                        </select>
	                    </div>
	                </div>
	                
		            <div class="form-group">
	                    <label for="position">位置(position)</label>
						<div class="input-group">
	                        <div class="input-group-addon">
	                            <i class="fa fa-edit"></i>
	                        </div>
	                        <input name="position" type="text" class="form-control" id="position" placeholder="位置(默认为:0)"/>
	                    </div>
	                </div>
	                
	            </div>
	        </div>
		</div>
		
		<div class="col-xs-12">
			<div class="box box-danger">
	            <div class="box-body">
	            
		            <div class="form-group">
	                    <label for="title">文章标题(title)</label>
						<div class="input-group">
	                        <div class="input-group-addon">
	                            <i class="fa fa-edit"></i>
	                        </div>
	                        <input name="title" type="text" class="form-control" id="title" placeholder="文章标题"/>
	                    </div>
	                </div>
	                
		            <div class="form-group">
	                    <textarea id="content" name="content" rows="30" cols="80"></textarea>
	                </div>
	                
	            </div>
	            <div class="box-footer">
		            <div class="form-group">
	                    <button type="submit" class="btn btn-primary">创建</button>
	                </div>
	            </div>
	        </div>
		</div>
	</div>
</form>
<script src="$cdn.name("js/plugins/ckeditor/ckeditor.js")" type="text/javascript"></script>
