<link href="$cdn.name("css/datatables/dataTables.bootstrap.css")" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-xs-12">
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">文章分类列表</h3>
            </div>
            <div class="box-body table-responsive">
                <table id="appsList" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>名称</th>
                            <th>描述</th>
                            <th>图标</th>
                            <th>位置</th>
                        </tr>
                    </thead>
                    <tbody>
                        #if($!{hasCat})
                    		#foreach($cat in $catList)
                    			<tr >
                            		<td >
                            			$!{cat.id}
                                    </td>
                            		<td >
                            			$!{cat.name}
                                    </td>
                            		<td >
										$!{cat.description}
                                    </td>
                            		<td >
										$!{cat.icon}
                                    </td>
                            		<td >
										$!{cat.position}
                                    </td>
                                </tr>
                    		#end
                    	#else
                    	<tr >
                    		<td colspan="4">
                    			<a class="btn btn-default btn-flat" href="cat_create_page.htm">
            						创建文章分类
                                </a>
                            </td>
                        </tr>
						#end
                    </tbody>
					
					#*
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>名称</th>
                            <th>描述</th>
                            <th>图标</th>
                            <th>位置</th>
                        </tr>
                    </tfoot>
					*#
					
                </table>
            </div>
        </div>
    </div>
    
</div>
	
<script src="/js/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
<script src="/js/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function() {
        $('#appsList').dataTable({
            "bPaginate": false,//分页
            "bLengthChange": false,
            "bFilter": false,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": false,
			"oLanguage": {
				"sInfo": "",
				"sInfoEmpty": ""
		 	}
        });
    });
</script>